<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel>
		<g:TabPanel width="500px" height="299px" styleName="gwt-DialogBox"
			ui:field="tPanel">
			<g:Tab text="Driver Details">
				<g:AbsolutePanel width="451px" height="257px">
					<g:at left="10" top="10">
						<g:Label text="Driver Edit" width="371px" height="18px"
							horizontalAlignment="ALIGN_CENTER" styleName="headingText" />
					</g:at>

					<g:at left="10" top="55">
						<g:Label text="Name:" />
					</g:at>
					<g:at left="72" top="55">
						<g:TextBox width="348px" height="6px" ui:field="nameField" />
					</g:at>
					<g:at left="10" top="79">
						<g:Label text="Password:" />
					</g:at>
					<g:at left="72" top="79">
						<g:TextBox width="348px" height="6px" ui:field="passwordField" />
					</g:at>
					<g:at left="10" top="103">
						<g:Label text="Email:" />
					</g:at>
					<g:at left="72" top="103">
						<g:TextBox width="348px" height="6px" ui:field="emailAddress" />
					</g:at>



					<g:at left="10" top="151">
						<g:Label text="Admin:" />
					</g:at>
					<g:at left="72" top="151">
						<g:ListBox width="150px" height="18px" ui:field="adminBox" />
					</g:at>




					<g:at left="10" top="206">
						<g:Button styleName="generalButton" ui:field="cancelButton">Cancel</g:Button>
					</g:at>

					<g:at left="196" top="179">
						<g:Label width="234px" height="18px" ui:field="errorLabel"
							styleName="serverResponseLabelError" />
					</g:at>
					<g:at left="350" top="206">
						<g:Button  ui:field="assignButton"
							styleName="generalButton" text="Assign">Next</g:Button>
					</g:at>
				</g:AbsolutePanel>
			</g:Tab>

			<g:Tab text="Assign to Bus">
				<g:AbsolutePanel width="445px" height="257px">
					<g:at left="10" top="55">
						<g:Label text="Busses:" />
					</g:at>
					<g:at left="72" top="55">
						<g:ListBox width="150px" height="18px" ui:field="busBox" />
					</g:at>
<!-- 					<g:at left="345" top="216"> -->
<!-- 						<g:Button styleName="generalButton" text="Next" width="100px" -->
<!-- 							height="41px" ui:field="nextButton2" /> -->
<!-- 					</g:at> -->
					<g:at left="245" top="216">
						<g:Button styleName="generalButton" text="Assign"
							 ui:field="assignBusButton" />
					</g:at>
					<!-- <g:at left="10" top="10"> -->
					<!-- <p1:addressPanel ui:field="invoiceAddress"/> -->
					<!-- </g:at> -->
					<g:at left="0" top="216">
						<g:Button ui:field="backbutton1" styleName="generalButton"
							text="Back" />
					</g:at>

				</g:AbsolutePanel>
			</g:Tab>
			<g:Tab text="Assign to Trip Sheet">
				<g:AbsolutePanel width="440px" height="258px">
					<!-- <g:at left="10" top="10"> -->
					<!-- <p1:addressPanel ui:field="deliveryAddress"/> -->
					<!-- </g:at> -->
					<g:at left="10" top="55">
						<g:Label text="Trips:" />
					</g:at>
					<g:at left="72" top="55">
						<g:ListBox width="150px" height="18px" ui:field="tripBox" />
					</g:at>
					<g:at left="0" top="217">
						<g:Button styleName="generalButton" 
							text="Back" ui:field="backButton3" />
					</g:at>
					<g:at left="340" top="217">
						<g:Button styleName="generalButton" text="Assign" ui:field="assignTripButton" />
					</g:at>
				</g:AbsolutePanel>
			</g:Tab>


		</g:TabPanel>
	</g:HTMLPanel>
</ui:UiBinder> 